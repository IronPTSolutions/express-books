<h2>Movies</h2>
<div>
  {{#each movies}}
    <div>
      <a href="/movies/{{this.id}}">{{this.title}}</a>
      <div class="row">
        <a class="btn btn-secondary" href="/movies/{{this.id}}/edit">Edit</a>
        <form action="/movies/{{this.id}}/delete" method="post">
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
  <a class="btn btn-success" href="/movies/new">Add</a>
</div>
