<div class="container">
  <div class="row">
    <div class="card-columns">
      {{#each movies as |movies| }}
        <div class="card">
          <div class="card-body">
            <h5 class="card-tittle mb-4">{{this.title}}</h5>
            <a href="/movies/{{this.id}}" class="btn btn-primary">Details</a>
          </div>
        </div>
      {{/each}}
    </div>
   <hr/>
  <div class="col-12 mt-4 pt-4">
    <a href="/movies/create" class="btn btn-success btn-block">Create new movie</a>
  </div>

  </div>
</div>