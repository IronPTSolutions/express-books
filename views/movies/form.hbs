<div class="container">
  <div class="card">
    <div class="card-body">

      {{#if movie.isNew}}
        <h5 class="card-title">Create your Movie</h5>
        <hr/>
        <form action="/movies/create" method="POST">
      {{else}}
        <h5 class="card-title">Edit your Movie</h5>
        <hr/>
        <form action="/movies/{{movie.id}}/edit" method="POST">
      {{/if}}

        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control" id="title" value="{{movie.title}}">
        </div>

        <div class="form-group">
          <label for="genre">Genre</label>
          <input type="text" name="genre" class="form-control" id="name" value="{{movie.genre}}">
        </div>

        <div class="form-group">
          <label for="plot">Plot</label>
          <textarea class="form-control" id="plot" name="plot" rows="5">{{movie.plot}}</textarea>
        </div>

        <div class="form-group">
          <label for="rate">Rate</label>
          <input type="number" name="rate" class="form-control" id="rate" value="{{movie.rate}}">
        </div>

        <div class="form-group">
          <label for="pictureUrl">Image url</label>
          <input type="text" name="pictureUrl" class="form-control" id="pictureUrl" value="{{movie.pictureUrl}}">
        </div>
      
        <button type="submit" class="btn btn-success float-right">Submit</button>
      </form>

    </div><!--card-body-->
  </div>
</div>