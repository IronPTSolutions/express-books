<h2>Edit Movie</h2>
<form action="/movies/{{movie.id}}/edit" method="post">
  <label for="name">Title</label>
  <input type="text" class="form-control" name="name" id="title" value="{{movie.title}}">
  <label for="name">Genre</label>
  <input type="text" class="form-control" name="genre" id="genre" value="{{movie.genre}}">
  <label for="name">Plot</label>
  <input type="text" class="form-control" name="plot" id="plot" value="{{movie.plot}}">
  <button class="btn btn-secondary" type="submit">Submit</button>
</form>
