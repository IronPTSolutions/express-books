<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      {{this.title}}
    </h5>
    <p class="authors-wrapper">
      {{#each this.author as |author|}}
      <small class="author-name">{{ author.name }} {{ author.lastName }}</small>
      {{/each}}
    </p>
    <a href="/books/{{this.id}}" class="btn btn-info">
      See details
    </a>
    <a href="/books/{{this.id}}/edit" class="btn btn-success">
      Edit
    </a>
    <form class="d-inline" action="/books/{{this.id}}/delete" method="POST">
      <button class="btn btn-danger" type="submit">Delete</button>
    </form>
  </div>
</div>