<h2>Celebrities</h2>
<div class="row">
{{#each celebrities}}
    <div class="col-sm-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <a class="btn btn-info" href="/celebrities/{{_id}}">More Info</a>
                <a class="btn btn-success" href="/celebrities/{{_id}}">Edit</a>
                <a class="btn btn-danger" href="/celebrities/{{_id}}">Delete</a>
            </div>
        </div>
    </div>
{{/each}}
</div>



<a class="btn btn-success" href="/celebrities/new">New</a>


