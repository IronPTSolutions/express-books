<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Create your artist</h5>
      <hr/>
      <form action="/create" method="POST">

        <div class="form-group">
          <input type="text" name="name" class="form-control" id="name" value="{{celebrity.name}}">
        </div>

        <div class="form-group">
          <input type="text" name="occupation" class="form-control" id="occupation" value="{{celebrity.occupation}}">
        </div>

        <div class="form-group">
          <label for="catchPhrase">Catch Phrase</label>
          <textarea class="form-control" id="catchPhrase" name="catchPhrase" rows="5">{{celebrity.catchPhrase}}</textarea>
        </div>

        <div class="form-group">
          <input type="text" name="image" class="form-control" id="image" value="{{celebrity.image}}">
        </div>

        <button type="submit" class="btn btn-success float-right">Submit</button>
      </form>
    </div>
  </div>
</div>