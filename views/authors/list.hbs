<h1>Authors</h1>
<a href="/authors/create" class="btn btn-success mb-3">Create</a>
<div class="row">
    {{#each authors}}
    {{!-- <a><a href="/authors/{{this.id}}">{{this.title}}</a></a> --}}
    <div class="col-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    {{this.name}} {{this.lastName}}
                </h5>
                <a href="/authors/{{this.id}}" class="btn btn-info">
                    See details
                </a>
                <a href="/authors/{{this.id}}/edit" class="btn btn-success">
                    Edit
                </a>
                <form class="d-inline" action="/authors/{{this.id}}/delete" method="POST">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>