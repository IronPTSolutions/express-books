{{#if author.isNew}}
<h1>Create</h1>
<form class="p-4 bg-white border" action="/authors/create" method="POST">
    {{else}}
    <h1>Edit</h1>
    <form class="p-4 bg-white border" action="/authors/{{author.id}}/edit" method="POST">
        {{/if}}
        <div class="form-group">
            <label for="title">Name:</label>
            <input type="text" class="form-control" name="name" id="name" value="{{author.name}}">
        </div>

        <div class="form-group">
            <label for="author">Last name:</label>
            <input type="text" class="form-control" name="lastName" id="lastName" value="{{author.lastName}}">
        </div>

        <div class="form-group">
            <label for="description">Nationality:</label>
            <textarea class="form-control" id="nationality" name="nationality"
                rows="4">{{author.nationality}}</textarea>
        </div>

        <div class="form-group">
            <label for="rating">Birthday:</label>
            <!-- Here, date is a custom handlebars helper. 
            To see what it does check out /helpers/date.js-->
            <input type="date" name="birthday" class="form-control" id="birthday"
                value="{{#date author.birthday}}{{/date}}">
        </div>

        <div class="form-group">
            <label for="rating">Picture URL:</label>
            <input type="text" name="pictureUrl" class="form-control" id="pictureUrl" value="{{author.pictureUrl}}">
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
    </form>