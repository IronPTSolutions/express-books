<h1>Tas</h1>
<a href="/tas/create" class="btn btn-success mb-3">Create</a>
<div class="row">
	{{#each tas as |ta|}}
	<div class="col-6 mb-3">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">
					{{ta.fullname}}
				</h5>
				<a href="/tas/{{this.id}}" class="btn btn-info">
					See details
				</a>
				<a href="/tas/{{this.id}}/edit" class="btn btn-success">
					Edit
				</a>
				<form class="d-inline" action="/tas/{{this.id}}/delete" method="POST">
					<button class="btn btn-danger" type="submit">Delete</button>
				</form>
			</div>
		</div>
	</div>
	{{/each}}
</div>